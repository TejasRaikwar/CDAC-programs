package day4.studentMenu;

import java.util.Arrays;
import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		System.out.println("hello");
		Scanner sc = new Scanner(System.in);
		Student[] sArr = new Student[50];

		int choice = sc.nextInt();

		System.out.println("1. Add Student\n " + "2. print Student by roll No.\n"
				+ "3. print all students sorted by marks" + "0. exit");

		System.out.println("Enter choice : ");

		do {
			switch (choice) {
			case 1: 
					{
						if (Student.getCount() < sArr.length) {
							System.out.println("Enter name : ");
							String name = sc.next();
							System.out.println("Enter course");
							String course = sc.next();
							System.out.println("Enter marks");
							float marks = sc.nextFloat();
		
							sArr[Student.getCount()] = new Student(name, course, marks);
						} else {
							System.out.println("Array is full!");
						}
					}
						;
						break;
			case 2: 
					{
						Arrays.stream(sArr).forEach(s -> System.out.println(s.toString()));
						
					};
					break;
			case 3: 
				{
					Arrays.sort(sArr, (s1, s2) -> Float.compare(s1.getMarks(), s2.getMarks()));
					Arrays.stream(sArr).forEach(s -> System.out.println(s.toString()));
				}
				;
				break;
			default:
				System.out.println("Please Enter valid choice !");
			}
		} while (choice != 0);

	}
}
